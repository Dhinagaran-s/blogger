<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <%= link_to tag.name, tag_path(tag), class: 'tag_title', id: "tag_#{tag.id}" %>
      <% if logged_in? %>
      <%= link_to "delete", tag_path(tag), method: :delete, confirm: "Really delete tag '#{tag.name}'?" %>
      <% end %>
    </li>
  <% end %>
</ul>